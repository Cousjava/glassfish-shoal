<project default="all" description="Building Shoal...">
    <pomVersion>3</pomVersion>

    <id>shoal</id>
    <name>shoal</name>
    <currentVersion>1.0-SNAPSHOT</currentVersion>
    <organization>
    <name>Sun Microsystems Inc.</name>
    <url>http://www.sun.com/</url>
    <logo>http://java.net/j2ee</logo>
    </organization>

    <inceptionYear>2005</inceptionYear>
    <package>com.sun</package>
    <logo>http://java.sun.com/j2ee</logo>
    <description>Shoal Project.</description>
    <shortDescription>Shoal</shortDescription>

    <url>https://shoal.dev.java.net</url>
    <issueTrackingUrl>Issue Tracker</issueTrackingUrl>
    <siteAddress>https://shoal.dev.java.net/servlets/ProjectIssues</siteAddress>
    <siteDirectory></siteDirectory>
    <distributionDirectory></distributionDirectory>

    <repository>
    <connection>scm:${shoal.cvsroot}</connection>
    <url>${shoal.viewcvs}</url>
    </repository>

    <!-- Will be extended in sub-project -->
    <mailingLists/>
    <developers/>

    <dependencies>
        <!-- The following two dependencies are needed by Maven when
             executing maven.xml Jelly script -->
        <dependency>
            <artifactId>commons-jelly-interaction</artifactId>  
            <groupId>commons-jelly</groupId>
            <jar>commons-jelly-tags-interaction-1.0.jar</jar>
            <version>1.0</version>
            <url/>
        </dependency>
        <dependency>
            <artifactId>commons-jelly-http</artifactId>  
            <groupId>commons-jelly</groupId>
            <jar>commons-jelly-tags-http-1.0.jar</jar>
            <version>1.0</version>
            <url/>
        </dependency>
    </dependencies>

    <versions>
        <version>
            <id>1.0</id>
            <name>Shoal</name>
            <tag/>
        </version>
    </versions>

    <licences>
        <licence>
            <name>Sun's Licence</name>
            <url>https://shoal.dev.java.net</url>
            <distribution>manual</distribution>
        </licence>
    </licences>

    <!-- Every module will have their own way for building -->
    <build/>
</project>
